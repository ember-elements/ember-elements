{{! template-lint-disable no-action}}
<ControlGroup
  @className={{rw
    this.NUMERIC_INPUT
    this.getNumericILarge
    this.getNumericIClassName
  }}
  @fill={{this.numericIFill}}
>
  {{#if (eq this.PositionLeft this.getButtonPosition)}}
    <ButtonGroup
      @className={{this.FIXED}}
      key='button-group'
      @vertical={{true}}
    >
      <Button
        @disabled={{this.getNumericIDisabled}}
        @icon='chevron-down'
        @className={{rw this.getNumericIIntent}}
        onmousedown={{action 'incrementButtonHandlers' 'up'}}
        onkeydown={{action 'incrementButtonHandlers' 'up'}}
      />
      <Button
        @disabled={{this.getNumericIDisabled}}
        @icon='chevron-up'
        @className={{rw this.getNumericIIntent}}
        onmousedown={{action 'incrementButtonHandlers' 'down'}}
        onkeydown={{action 'incrementButtonHandlers' 'down'}}
      />
    </ButtonGroup>
  {{/if}}
  <InputGroup
    autoComplete='off'
    @className={{rw this.getNumericIIntent this.getNumericILarge}}
    @disabled={{this.getNumericIDisabled}}
    @leftIcon={{this.getNumericILeftIcon}}
    @onChange={{action 'handleInputChange'}}
    disabled={{this.getNumericIDisabled}}
    max={{this.getNumericIMax}}
    min={{this.getNumericIMin}}
    onfocus={{action 'handleInputFocus'}}
    onblur={{action 'handleInputBlur'}}
    onkeydown={{action 'handleInputKeyDown'}}
    onkeypress={{action 'handleInputKeyPress'}}
    onPaste={{action 'handleInputPaste'}}
    value={{this.value}}
    value-change={{this.getValueProp}}
    ...attributes
    {{did-insert this.inputElementRef}}
  >
    {{yield}}
  </InputGroup>
  {{#if (eq this.PositionRight this.getButtonPosition)}}
    <ButtonGroup
      @className={{this.FIXED}}
      key='button-group'
      @vertical={{true}}
    >
      <Button
        @disabled={{this.getNumericIDisabled}}
        @icon='chevron-down'
        @className={{rw this.getNumericIIntent}}
        onmousedown={{action 'incrementButtonHandlers' 'up'}}
        onkeydown={{action 'incrementButtonHandlers' 'up'}}
      />
      <Button
        @disabled={{this.getNumericIDisabled}}
        @icon='chevron-up'
        @className={{rw this.getNumericIIntent}}
        onmousedown={{action 'incrementButtonHandlers' 'down'}}
        onkeydown={{action 'incrementButtonHandlers' 'down'}}
      />
    </ButtonGroup>
  {{/if}}
</ControlGroup>