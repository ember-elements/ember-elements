{{! template-lint-disable no-triple-curlies }}
<label
  class={{rw
    this.CHECKBOX
    this.CONTROL
    this.getAlignIndicator
    this.getClassName
    this.getDisabled
    this.getInline
    this.getLarge
  }}
>
  <input
    type='checkbox'
    disabled={{this.getDisabled}}
    onchange={{this.handleChange}}
    ...attributes
    {{did-insert
      this.updateIndeterminate
      this.ICheckboxState
      this.indeterminateValue
    }}
    {{did-update
      this.updateIndeterminate
      this.ICheckboxState
      this.indeterminateValue
    }}
  />
  <sapn class={{this.CONTROL_INDICATOR}}></sapn>
  {{#if this.getLabel}}
    {{this.getLabel}}
  {{else}}
    {{{this.getLabelElement}}}
  {{/if}}
  {{yield}}
</label>