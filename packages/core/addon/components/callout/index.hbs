<div
  class={{rw
    this.CALLOUT
    this.getClassName
    this.getIntent
    this.getIconClassName
  }}
  ...attributes
>
  {{#if this.getIconName}}
    <Icon @icon={{this.getIconName}} @iconSize={{this.SIZE_LARGE}} />
  {{/if}}
  {{#if this.getTitle}}
    <h4 class={{this.HEADING}}>
      {{this.getTitle}}
    </h4>
  {{/if}}
  {{yield}}
</div>