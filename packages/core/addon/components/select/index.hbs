{{! template-lint-disable}}
<span isOpen={{this.getIsOpen}} activeItem={{this.getActiveItem}}></span>
<Popover @popperTarget={{@popperTarget}} @isScheduleUpdate={{this.isScheduleUpdate}} @autoFocus={{false}}
	@enforceFocus={{false}} @isOpen={{this.getIsOpen}} @disabled={{this.getDisabled}} @position={{this.BOTTOM_LEFT}}
	@props={{@popoverProps}} @className='{{this.getClassName}} {{@popoverProps.className}}'
	@popoverClassName='{{this.SELECT_POPOVER}} {{@popoverProps.popoverClassName}}' @onClose={{@onClose}}
	onOpening='{this.handlePopoverOpening}' onOpened='{this.handlePopoverOpened}' onClosing='{this.handlePopoverClosing}'
	{{!-- @onInteraction={{action 'handlePopoverInteraction' }} --}}>
	<div onkeydown={{action 'handleKeyDown' }} onkeyup={{action 'handleKeyUp' }}>
		{{#if this.getFilterable}}
			<InputGroup @leftIcon='search' placeholder='Filter...' @props={{@inputProps}} oninput={{action 'handleQueryChange'
				}} value={{this.queryState}} {{did-insert this.refHandlersInput}} {{did-update this.refHandlersInputUpdate
				this.queryState}}>
				{{#if this.queryState.length}}
					<Button @icon='cross' @minimal={{true}} @onClick={{action 'onClickResetQuery' }} />
				{{/if}}
			</InputGroup>
		{{/if}}
		<ul class={{rw this.MENU}} {{did-insert this.refHandlers}}>
			{{#if (and this.findInitialContent (eq this.queryState ''))}}
				{{{@initialContent}}}
			{{/if}}
			{{#if this.getMenuContent.length}}
				{{#each this.getMenuContent as |item|}}
					{{#if item.modifiers.matchesPredicate}}
						{{yield
              true
              item
              (action 'handleItemSelectClick' item.modifiers.item)
            }}
					{{/if}}
				{{/each}}
			{{else if this.createItemView}}
				{{yield
          false
          this.createItemView
          (action 'handleClick' this.queryState)
        }}
			{{else if @noResults}}
				{{{@noResults}}}
			{{/if}}
		</ul>
	</div>
</Popover>